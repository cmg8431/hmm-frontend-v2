{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "incremental": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "typeRoots": ["./src/@types"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src/@types/*.d.ts"],
  "exclude": ["node_modules"]
}
